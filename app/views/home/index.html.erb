<div ng-controller="tasksController">
  <button ng-click="listTasks()">import</button>
  <ul>
    <li ng-repeat="task in tasks" ng-click="showTask(task.id)">{{task.title}}<a href="" ng-click="destroy($index)"> Eliminar</a></li>
  </ul>
  <h3>detalles</h3>
  <form ng-submit="updateTask()">
    <input type="text" ng-model="task.title" />
    <br>
    <textarea ng-model="task.description"></textarea>
    <br>
    <button type="submit">Update</button>
  </form>
  
  <h3>Agregar nueva tarea</h3>
  <form ng-submit="addTask()">
    <input type="text" ng-model="newTask.title" />
    <br>
    <textarea ng-model="newTask.description"></textarea>
    <br>
    <button type="submit">Agregar</button>
  </form>
</div>
